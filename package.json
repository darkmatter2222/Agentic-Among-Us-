{
  "name": "agentrunner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "server",
    "shared"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "npm run dev:all",
    "dev:client": "vite",
    "dev:server": "npm --workspace @agentrunner/server run dev",
    "dev:all": "concurrently --kill-others --names \"server,client\" --prefix \"[{name}]\" \"npm --workspace @agentrunner/server run dev\" \"npm run dev:client\"",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "smoke:test": "node ./scripts/smoke-test.js"
  },
  "dependencies": {
    "pixi.js": "^8.14.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^2.1.4"
  }
}
